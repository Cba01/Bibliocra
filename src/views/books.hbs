
<section style="background: url(./img/bookshelf-2.jpg) no-repeat center fixed; background-size: cover; height: 85vh">
    {{!-- CREAR CARD DE LIBRO --}}
        <div class="container pt-3">
            {{#each books}}
                <div class="col-3">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top img-thumbnail" width="100" src="/images/{{image}}" alt="">
                        <div class="card-body">
                            <h5 class="card-title">{{title}}</h5>
                            <p class="card-text">{{description}}</p>
                            <p class="card-text">{{price}}</p>
                            <a onclick="agregarAlCarrito('{{_id}}')" class="btn btn-primary">AÃ±adir</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
</section>